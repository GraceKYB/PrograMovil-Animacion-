<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="animacion.PaginaDos"
             BackgroundColor="LightGray"
             Title="PaginaDos">

    <StackLayout Padding="20" VerticalOptions="CenterAndExpand">

        <Image x:Name="animatedImage"
               Source="mascota.png"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand"
               WidthRequest="200"
               HeightRequest="200"
               Margin="0,20,0,0" />
        
        <Label Text="Contenido de la Página Dos" 
               HorizontalOptions="Center" 
               VerticalOptions="CenterAndExpand"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="DeepPink"/>

        <Button Text="Ir a Nueva Página"
                Clicked="IrANuevaPagina_Clicked"
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand"
                BackgroundColor="#007AFF"
                TextColor="White"
                FontSize="18"
                WidthRequest="200"
                HeightRequest="50"
                Margin="0,20,0,0" />
    </StackLayout>

</ContentPage>